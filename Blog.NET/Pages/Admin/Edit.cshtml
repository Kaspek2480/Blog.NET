@page
@model Blog.NET.Pages.Admin.EditModel

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="display-4">Edit Tag</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id = "id" class="form-control" asp-for="EditTagRequest.Id" readonly />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" id = "name" class="form-control" asp-for="EditTagRequest.Name"/>
        </div>
        
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" id = "displayName" class="form-control" asp-for="EditTagRequest.DisplayName"/>
        </div>
        
        <div class="mb-3">
            
            <div class=d-flex>
                <button type="submit" class="btn btn-dark" formaction="/Admin/Edit?handler=OnPost">Update</button>
                <button type="submit" class="btn btn-danger ms-2" formaction="/Admin/Edit?handler=Delete&id=@Model.EditTagRequest.Id">Delete</button>
            </div>
            
        </div>
        
    </form>
</div>