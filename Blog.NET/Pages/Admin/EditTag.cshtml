@page
@model EditTagModel

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1 class="display-4">Edit Tag</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model == null)
    {
        <p>There is no tag to show.</p>
    }
    else
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="EditTag!.Id" readonly/>
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="EditTag!.Name"/>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input type="text" id="displayName" class="form-control" asp-for="EditTag!.DisplayName"/>
            </div>

            <div class="mb-3">

                <div class=d-flex>
                    <button type="submit" class="btn btn-dark" asp-page-handler="update" asp-route-id="@Model.EditTag!.Id">Update</button>
                    <button type="submit" class="btn btn-danger ms-2" asp-page-handler="delete" asp-route-id="@Model.EditTag!.Id">Delete</button>
                </div>

            </div>

        </form>
    }
</div>